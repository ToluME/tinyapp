<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
          <div class="ml-auto">
         
              <% if (username) { %>
                <span class="text-dark ml-3">Logged in as: <%= username %></span>
                &nbsp; <!-- Non-breaking space for spacing -->
                <button type="submit" class="btn btn-outline-dark">Logout</button>
      
              <% } else { %>
                <form class="form-inline ml-auto" method="POST" action="/login">
                  <label for="Username" ></label>
                    <input 
                    class="form-control mr-2"
                    type="text" 
                    name="username" 
                    placeholder="Username"
                    style="width: 300px;"
                    />
                    <button type="submit" class="btn btn-outline-dark">Login</button>
                  </form>
                <% } %>
          
        </div>
        </div>
      </div>
    </nav>
  </header>